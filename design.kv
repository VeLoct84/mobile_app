<LoginScreen>:
	GridLayout:
		cols: 1
		GridLayout:
			cols: 1
			Label:
				text: "User Login"
			TextInput:
				id: username
				hint_text: "Username"
			TextInput:
				id: password
				hint_text: "Password"
			Button:
				text: "Login"
				on_press: root.login(root.ids.username.text, root.ids.password.text)
			Label:
				id: login_wrong
				text: ""
		GridLayout:
			cols: 2
			Button:
				text: "Forgot Password?"
			Button:
				text: "Sign Up"
				on_press: root.sign_up()

<SignUpScreen>:
	GridLayout:
		cols: 1
		Label: 
			text: "New user? Please register to use this app."
		TextInput: 
			id: username
			hint_text: "Username"
		TextInput: 
			id: password
			hint_text: "Password"
		GridLayout:
			cols: 2
			Button:
				text: "Back"
				on_press: root.go_to_login()
			Button:
				text: "Submit"
				on_press: root.add_user(root.ids.username.text, root.ids.password.text)

<SignUpScreenSuccess>:
	GridLayout:
		cols: 1
		Label:
			text: "Sign Up Successfully!"
		Button:
			text: "Home"
			on_press: root.go_to_login()

<LoginScreenSuccess>:
	GridLayout:
		cols: 1
		Button:
			text: "Logout"
			on_press: root.logout()
		Label:
			text: "How are you feeling today?"
		TextInput:
			hint_text: "Happy, Sad, Loving..."
		Button:
			text: "Enlighten me!"

<RootWidget>:
	LoginScreen:
		name: "login_screen"
	SignUpScreen:
		name: "sign_up_screen"
	SignUpScreenSuccess:
		name: "sign_up_screen_success"
	LoginScreenSuccess:
		name: "login_screen_success"
